<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5.0" method="upgrade">
    <name>Featureditems</name>
    <version>0.9.0</version>
    <creationDate>June 2012</creationDate>
    <author>Dioscouri</author>
    <authorEmail>info@dioscouri.com</authorEmail>
    <authorUrl>http://www.dioscouri.com</authorUrl>
    <copyright>2012 Dioscouri.com</copyright>
    <copyrightHolder>Dioscouri.com</copyrightHolder>
    <license>GNU General Public License v2</license>
    <description>COM_FEATUREDITEMS_DESC</description>

    <!-- Application/site -->    
    <files folder="site">
        <file>featureditems.php</file>
        <file>controller.php</file>
        <file>router.php</file>
        <file>index.html</file>
        <folder>controllers</folder>
        <folder>models</folder>
        <folder>views</folder>
    </files>

    <languages folder="languages/site">
        <language tag="en-GB">en-GB.com_featureditems.ini</language>
    </languages>
    
    <!-- Application/administrator -->
    <administration>
        <menu img="../media/com_featureditems/images/featureditems_16.png">COM_FEATUREDITEMS</menu>

        <files folder="admin">
            <file>featureditems.php</file>
            <file>controller.php</file>
            <file>defines.php</file>
            <file>index.html</file>
            <folder>controllers</folder>
            <folder>elements</folder>
            <folder>helpers</folder>
            <folder>install</folder>
            <folder>library</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>

        <languages folder="languages/admin">
            <language tag="en-GB">en-GB.com_featureditems.ini</language>
            <language tag="en-GB">en-GB.com_featureditems.sys.ini</language>
            <language tag="en-GB">en-GB.com_featureditems.menu.ini</language>
        </languages>
    </administration>
    
    <!-- Installation -->
    <install>
        <sql>
            <file>install.sql</file>
        </sql>
    </install>
    
    <installfile>install.php</installfile>
    <uninstallfile>uninstall.php</uninstallfile>

    <!--  Media -->
    <media destination="com_featureditems" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>menus</folder>
        <file>index.html</file>
    </media>
        
    <!-- Modules -->    
    <modules>
        <!-- <module module="mod_whatever" publish="true" client="site"/> -->
        <module module="modules/mod_featureditems_items" client="site" />
    </modules> 

    <!-- Plugins -->
    <plugins>
        <!-- Featureditems: -->
        <!-- Instructions: <plugin plugin="package_folder_containing_plugin_files" element="plugin_filename" publish="true" group="content" /> -->
        <plugin plugin="plugins/plg_content_featureditems" element="featureditems" publish="true" group="content" />
        <plugin plugin="plugins/plg_system_featureditems" element="featureditems" group="system" />
    </plugins>
</install>
