<install type="module" version="1.5.0" method="upgrade" client="site">
	<name>Open Support Tickets</name>
	<author>Dioscouri.com</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<version>5.0.3-alpha</version>
	<creationDate>April 2010</creationDate>
	<copyright>2010 Dioscouri.com</copyright>
	<license>GNU General Public License</license>
	<description></description>
	<files>
		<filename module="mod_billets_open">mod_billets_open.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.mod_billets_open.ini</language>
	</languages>
	<params>
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param type="spacer" />
		<param name="display_null" type="radio" default="0" label="DISPLAY_NO_TICKETS" description="DISPLAY_NO_TICKETS_DESC">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="null_text" type="text" size="50" default="No Tickets" label="NO_TICKETS_TEXT" description="NO_TICKETS_TEXT_DESC"></param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic" label="basic">
				<field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
				<field type="spacer" />
				<field name="display_null" type="radio" default="0" label="DISPLAY_NO_TICKETS" description="DISPLAY_NO_TICKETS_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="null_text" type="text" size="50" default="No Tickets" label="NO_TICKETS_TEXT" description="NO_TICKETS_TEXT_DESC"></field>
			</fieldset>
		</fields>
	</config>
</install>