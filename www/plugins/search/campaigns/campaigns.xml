	<description>COM_TIENDA_ENABLES_SEARCHING_TIENDA_PRODUCTS_AND_CATEGORIES_IN_CORE_SEARCH_COMPONENT</description>
	<files>
		<filename plugin="campaigns">campaigns.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic" label="basic">
				<field name="title" type="text" size="50" default="Tienda" label="Title" description="Category Title"/>
