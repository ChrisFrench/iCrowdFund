<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="community" method="upgrade">
	<name>User Tickets - Billets</name>
	<version>5.0.3-alpha</version>
	<creationDate>December 2010</creationDate>
	<author>Dioscouri Design</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2010 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<isapplication>true</isapplication>
	<description>PLUGINDESC</description>
	<files>
		<filename plugin="billets">billets.php</filename>
		<folder>billets</folder>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.plg_community_billets.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic" label="basic">
				<field name="cache" type="list" default="0" label="ENABLECACHING" description="CACHEDATA">
					<option value="0">No</option>
					<option value="1">Use Global</option>
				</field>
				<field name="limit" type="text" default="10" label="LIMITLABEL" description="LIMIT" />
			</fieldset>
		</fields>
	</config>
	<params>
		<param name="cache" type="list" default="0" label="ENABLECACHING" description="CACHEDATA">
			<option value="0">No</option>
			<option value="1">Use Global</option>
		</param>
		<param name="limit" type="text" default="10" label="LIMITLABEL" description="LIMIT" />
	</params>
</install>