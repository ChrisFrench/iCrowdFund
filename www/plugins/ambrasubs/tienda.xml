<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="ambrasubs" method="upgrade">
	<name>Use Tienda to Checkout in Ambrasubs</name>
	<version>0.7.2</version>
	<creationDate>August 2010</creationDate>
	<author>Dioscouri Design</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>This plugin enables Tienda Checkout for Ambrasubs Items</description>
    <files>
		<filename plugin="tienda">tienda.php</filename>	
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_ambrasubs_tienda.ini</language>
	</languages>
	
	<params>
        <param name="display_layout" type="radio" default="0" label="Location of cart button" description="Location of cart button DESC">
          <option value="0">Right Column</option>
          <option value="1">After Description</option>
        </param>
	</params>
		
</install>
