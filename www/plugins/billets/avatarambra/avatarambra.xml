	<description>PLG_BILLETS_AVATARAMBRA</description>
	<files>
		<filename plugin="avatarambra">avatarambra.php</filename>
	</files>
	<languages>
		<language tag="en-GB">languages/en-GB.plg_billets_avatarambra.ini</language>
	</languages>
	<params>
		<param name="link_to_profile"
		type="radio"
		default="1"
		label="Link to Profile"
