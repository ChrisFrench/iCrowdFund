			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
	<config>
		<fields name="params">
			<fieldset name="basic" label="basic">
				<field name="link_to_profile"
				type="radio"
				default="1"
				label="Link to Profile"
				description="Link to Profile">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
