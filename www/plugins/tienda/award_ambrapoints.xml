<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
	<name>Tienda Actions Award - AmbraUM Points</name>
	<version>0.7.2</version>
	<creationDate>March 2011</creationDate>
	<author>Dioscouri Design</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>TIENDA AMBRAPOINTS AWARD</description>
    <files>
		<filename plugin="award_ambrapoints">award_ambrapoints.php</filename>	
	</files>
	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_tienda_award_ambrapoints.ini</language>
	</languages>
	
	<params addpath="/administrator/components/com_tienda/elements">
		<param name="award_points_type" type="radio" default="Fixed" label="TIENDA AMBRAPOINTS AWARD TYPE" description="TIENDA AMBRAPOINTS AWARD TYPE DESC">
  			<option value="Fixed">Fixed</option> 
			<option value="Percentage">Percentage</option> 
  		</param>
  		<param name="percentage_value" type="text" size="10" default="1" label="TIENDA AMBRAPOINTS AWARD PERCENTAGE" description="TIENDA AMBRAPOINTS AWARD PERCENTAGE DESC" />
  		<param type="spacer" />
		<param name="allpayments_awarded" type="radio" default="0" label="TIENDA AMBRAPOINTS AWARD ALL PAYMENTS" description="TIENDA AMBRAPOINTS AWARD ALL PAYMENTS DESC">
  			<option value="0">COM_TIENDA_NO</option> 
			<option value="1">COM_TIENDA_YES</option> 
  		</param>
  		<param name="min_purchase_value" type="text" size="10" default="1" label="TIENDA AMBRAPOINTS AWARD MINIMUM PURCHASE" description="TIENDA AMBRAPOINTS AWARD MINIMUM PURCHASE DESC" />
    </params>		
</install>
