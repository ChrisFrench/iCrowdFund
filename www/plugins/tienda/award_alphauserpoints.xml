<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="tienda" method="upgrade">
	<name>Tienda Actions Award - AlphaUserPoints</name>
	<version>0.7.2</version>
	<creationDate>March 2011</creationDate>
	<author>Dioscouri</author>
	<authorEmail>info@dioscouri.com</authorEmail>
	<authorUrl>http://www.dioscouri.com</authorUrl>
	<copyright>2012 Dioscouri.com</copyright>
	<license>GNU General Public License v2</license>
	<description>TIENDA ALPHAUSERPOINTS AWARD</description>
	
	<files>
		<filename plugin="award_alphauserpoints">award_alphauserpoints.php</filename>
		<folder>award_alphauserpoints</folder>	
	</files>

	<languages folder="languages">
		<language tag="en-GB">en-GB.plg_tienda_award_alphauserpoints.ini</language>
	</languages>

	<params addpath="/administrator/components/com_tienda/elements">
		<param name="award_points_type" type="radio" default="Fixed" label="TIENDA ALPHAUSERPOINTS AWARD TYPE" description="TIENDA ALPHAUSERPOINTS AWARD TYPE DESC">
  			<option value="Fixed">Fixed</option> 
			<option value="Percentage">Percentage</option> 
  		</param>
  		<param name="points_value" type="text" size="10" default="1" label="TIENDA ALPHAUSERPOINTS AWARD VALUE" description="TIENDA ALPHAUSERPOINTS AWARD VALUE DESC" />
  		<param type="spacer" />
		<param name="allpayments_awarded" type="radio" default="0" label="TIENDA ALPHAUSERPOINTS AWARD ALL PAYMENTS" description="TIENDA ALPHAUSERPOINTS AWARD ALL PAYMENTS DESC">
  			<option value="0">COM_TIENDA_NO</option> 
			<option value="1">COM_TIENDA_YES</option> 
  		</param>
  		<param name="min_purchase_value" type="text" size="10" default="1" label="TIENDA ALPHAUSERPOINTS AWARD MINIMUM PURCHASE" description="TIENDA ALPHAUSERPOINTS AWARD MINIMUM PURCHASE DESC" />
  		<param type="spacer" />
  		<param name="award_points_reviews" type="radio" default="1" label="TIENDA ALPHAUSERPOINTS AWARD REVIEWS" description="TIENDA ALPHAUSERPOINTS AWARD REVIEWS DESC">
  			<option value="0">COM_TIENDA_NO</option> 
			<option value="1">COM_TIENDA_YES</option> 
  		</param>
  		<param name="points_per_review" type="text" size="10" default="1" label="TIENDA ALPHAUSERPOINTS AWARD POINTS PER REVIEW" description="TIENDA ALPHAUSERPOINTS AWARD POINTS PER REVIEW DESC" />
   </params>
			
</install>